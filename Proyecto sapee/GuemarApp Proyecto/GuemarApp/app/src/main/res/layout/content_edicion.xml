<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.leopasca.guemarapp.EdicionActivity"
    tools:showIn="@layout/app_bar_edicion"
    android:background="#59a1a4"
    android:id="@+id/LayoutRelativo">

    <com.joanzapata.pdfview.PDFView
        android:id="@+id/pdfview"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="0.62"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/focus_border_style"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#1d686b"
        android:minHeight="?attr/actionBarSize"
        android:layout_below="@+id/pdfview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/toolbarmenucontainer"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#1d686b">

            <ImageButton
                android:id="@+id/imbComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/coment"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@mipmap/coment"/>
            <ImageButton
                android:id="@+id/imbResaltador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/resaltador"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@mipmap/resaltador"
                android:layout_marginLeft="30px"/>
            <ImageButton
                android:id="@+id/imbVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/video"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@mipmap/video"
                android:layout_marginLeft="30px"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnPasar"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
